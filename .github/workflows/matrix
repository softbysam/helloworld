name: Go Matrix Build

on: [push]

jobs:
  build:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        go-version: [1.15, 1.16, 1.17]
        ubuntu-version: [20.04, 18.04]
    steps:
    - uses: actions/checkout@v2
    - name: Set up Go
      uses: actions/setup-go@v2
      with:
        go-version: ${{ matrix.go-version }}
    - name: Set up Ubuntu
      uses: actions/setup-node@v1
      with:
        node-version: 14.x
        distro: ubuntu-${{ matrix.ubuntu-version }}
    - name: Build and test
      run: |
        go build -v .
        go test -v ./...
